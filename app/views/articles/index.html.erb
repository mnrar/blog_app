<h1>All Articles</h1>

<%= link_to "View by tags", tags_path %>
<hr>
<ul id = "articles">
  <% @articles.each do |article|%>
    <li>
      <%= link_to article.title, article_path(article), classs: "article-title", id: "article_#{article.id}" %>
    </li>  
  <% end %>  
</ul>
<br>
<hr>
<br>
<%= link_to "Create new Article", new_article_path , class: "new-article"%>
